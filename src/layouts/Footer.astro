<style lang="scss">
  @import "../styles/variables.scss";

  section {
    background: #000;
  
    #box {
      background: #fff;
      padding: $blank-space;
      border-radius: 20px 20px 0px 0px;

      display: flex;
      justify-content: space-between;
    
      img {
        width: 50px;
      }
      
      #links {
        display: flex;
        flex-direction: column;
        font-size: $medium-title;
        font-weight: bold;
        gap: 10px;
      }

      #media {
        display: flex;
        flex-direction: column;
        gap: 20px;
        font-size: $large-text;
        
        #socials {
          display: flex;
          gap: 20px;

          img {
            width: 35px;
          }
        }

        #icon {
          opacity: 0.5;
        }
      }
    }
  }

  @media only screen and (min-width: $mobile-width) {
    section {    
      #box {     
        img {
          width: 150px;
        }
        
        #links {
          display: flex;
          flex-direction: column;
          font-size: $large-text;
          font-weight: bold;
          gap: 10px;
        }

        #media {
          display: flex;
          flex-direction: column;
          gap: 20px;
          font-size: $large-text;
          
          #socials {
            display: flex;
            gap: 20px;

            img {
              width: 35px;
            }
          }

          #icon {
            opacity: 0.5;
          }
        }
      }
    }
  }
</style>
