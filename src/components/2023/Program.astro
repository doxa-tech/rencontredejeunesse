<style lang="scss">
  @import "../../styles/variables";

  section {
    display: flex;
    justify-content: center;
    background-color: #617a64;
    font-family: bebas, sans-serif;
    letter-spacing: 0.1em;

    .section-container {
      max-width: $main-width;
      width: 100%;
      padding: 80px 100px;

      h2 {
        font-size: $sub-title;
        text-transform: uppercase;
        padding: 0 0 30px 0;
        color: #fff;

        &:not(:nth-of-type(1)) {
          padding-top: 40px;
        }
      }

      h3 {
        color: #fff;
        padding: 40px 0 20px 0;
      }

      .days {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
        border-top: 2px dashed white;
        padding: 20px 0 10px 0;

        .day {
          flex: 1 1 0;

          &:not(:last-of-type) {
            padding: 0 0 0 0;
          }

          h4 {
            color: #fff;
            padding: 0px 0 10px 0;
          }
        }
      }

      p {
        text-transform: uppercase;
        font-size: $large-text;
        color: #fff;
        font-weight: 200;
        line-height: 1.2em;
        padding: 0 0 10px 0;
      }
    }

    @media only screen and (max-width: $mobile-width) {
      .section-container {
        .days {
          flex-direction: column;
        }
      }
    }
  }
</style>
