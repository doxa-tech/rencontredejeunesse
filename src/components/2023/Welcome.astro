<section>
  <div class="section-container">
    <div class="rows-container">
      <div class="row1">
        <img src="2023/welcome/title.png" />
        <p class="subtitle"><b>Esaï 43:13</b> toutes choses nouvelles</p>
      </div>

      <div class="row2">
        <p>05-06 mai 2023</p>
        <p>Oron - Genève - Tavannes</p>
      </div>
    </div>

    <button onclick="window.scrollBy(0, 600);"
      ><img class="arrow" src="2023/welcome/arrow.png" />
    </button>
  </div>
</section>

<style lang="scss">
  @import "../../styles/variables";

  section {
    background-image: url("/2023/welcome/background.jpg");
    background-size: cover;

    width: 100%;
    height: 700px;

    display: flex;
    justify-content: center;
    align-items: center;

    .section-container {
      height: 100%;
      width: 100%;
      max-width: $main-width;
      padding: $logo-burger-height $main-padding 0 $main-padding;

      display: flex;
      flex-direction: row;
      justify-content: center;
      align-items: flex-start;

      position: relative;

      div.rows-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        div.row1 {
          text-align: center;
          padding: 50px 0 0 0;

          img {
            width: 600px;
            max-width: 100%;
          }

          p.subtitle {
            color: #fff;
            text-transform: uppercase;
            font-size: $sub-title;
            font-family: bebas, sans-serif;
            font-weight: 200;
            font-stretch: 2em;
            letter-spacing: 0.01em;

            b {
              font-weight: 400;
            }
          }
        }

        div.row2 {
          padding: 100px 0 0 30px;
          text-align: left;
          color: #fff;
          text-transform: uppercase;
          font-size: $medium-title;
          align-self: flex-start;
          font-family: bebas, sans-serif;
          font-weight: 400;
          letter-spacing: 0.1em;
        }
      }

      img.arrow {
        position: absolute;
        left: 50%;
        transform: translate(-50%, 0);
        bottom: 0px;
        width: 80px;

        &:hover {
          animation: bounce 2s infinite;
        }

        @keyframes bounce {
          0%,
          20%,
          50%,
          80%,
          100% {
            transform: translate(-50%, 0);
          }
          40% {
            transform: translate(-50%, -30px);
          }
          60% {
            transform: translate(-50%, -15px);
          }
        }
      }
    }

    @media only screen and (max-width: $mobile-width) {
      height: 550px;

      .section-container {
        padding: 0 $mobile-padding !important;

        div.rows-container {
          div.row1 {
            padding: 100px 0 0 0;
          }

          div.row2 {
            padding-left: 0;
          }
        }
      }
    }
  }
</style>
