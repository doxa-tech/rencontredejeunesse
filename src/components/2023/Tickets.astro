<style lang="scss">
  @import "../../styles/variables";

  section {
    display: flex;
    justify-content: center;

    .section-container {
      max-width: $main-width;
      padding: 80px 50px;

      div.prices {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;

        div.price {
          border: 3px solid #617a64;
          border-radius: 5px;
          margin: 10px;
          color: #617a64;

          div.day {
            text-transform: uppercase;
            font-size: $large-text;
            position: relative;
            height: 55px;
            vertical-align: middle;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
            border-bottom: 3px dashed #617a64;

            &.full {
              background-color: #617a64;
              color: #fff;

              &::after {
                content: "";
                position: absolute;
                bottom: -3px;
                left: -3px;
                right: -3px;
                border-bottom: 3px dashed white;
              }

              span {
                position: absolute;
                top: 12px;
                left: 30px;
              }
            }
          }

          & > p:nth-of-type(1) {
            padding: 10px 30px 0 30px;
            font-size: $large-text;
          }

          & > p:nth-of-type(2) {
            padding: 0 30px 10px 30px;
            font-size: $small-text;
          }
        }
      }
    }
  }
</style>
