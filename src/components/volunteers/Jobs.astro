<style lang="scss">
  @import "../../styles/variables";
  @import "../../styles/button-bar";

  section {
    .section-container {
      max-width: $main-width;
      padding: 0 10px 100px 10px;
      margin: auto;

      div.apply {
        display: flex;
        align-items: center;
        justify-content: space-between;

        a {
          font-size: $medium-title;
          font-weight: bold;
          color: #fff;
          text-align: center;
          
          padding: 10px 30px;
          margin: 0 0 0 40px;
          background-color: #ef0edc;
          border-radius: 2px;

          &:hover {
            background-color: #c60bb7;
          }
        }
      }
      
      div.row-text {
        font-size: $medium-title;
        font-weight: bold;

        margin: 60px 0;

        span {
          position: relative;

          &::after {
            content: "";
            background-color: #ef0edc;
            position: absolute;
            line-height: 0;
            right: -0.2em;
            bottom: -0.2em;
            left: -0.1em;
            z-index: -1;
            padding: 10px 5px;
            transition: 0.3s;
          }
        }
      }

      div.tiles {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        justify-content: center;

        div.tile {
          width: 310px;
          margin: 10px;
          padding: 18px;
          border-radius: 2px;
          background-color: #141dc6;
          color: #fff;

          p.title {
            font-size: $large-text;
            font-weight: bold;
            margin-bottom: 5px;
          }

          p.description {
            font-size: $large-text;
            font-style: italic;
          }

          &:hover {
            background-color: #1924f7;
          }
        }
      }
    }
  }

  @media only screen and (max-width: $mobile-width) {
    section {
      .section-container {
        div.apply { 
          a {
            padding: 10px 5px;
          }
        }
      }
    }
  }
</style>