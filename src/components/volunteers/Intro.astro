<style lang="scss">
  @import "../../styles/variables";
  @import "../../styles/button-bar";

  section {
    .section-container {
      max-width: $main-width;
      padding: 0 $main-padding;
      margin: auto;

      display: flex;
      flex-direction: column;

      div.row-title {
        display: flex;
        flex-direction: row;

        div.first-half {
          flex: 1;
        }

        div.second-half {
          flex: 1;
          width: 60%;
          flex-grow: 0;
          padding: 0 70px 40px 0;

          /* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#141dc6+35,d10cc0+65 */
          background: #141dc6; /* Old browsers */
          background: -moz-linear-gradient(
            45deg,
            #141dc6 35%,
            #d10cc0 65%
          ); /* FF3.6-15 */
          background: -webkit-linear-gradient(
            45deg,
            #141dc6 35%,
            #d10cc0 65%
          ); /* Chrome10-25,Safari5.1-6 */
          background: linear-gradient(
            45deg,
            #141dc6 35%,
            #d10cc0 65%
          ); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
          filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#141dc6', endColorstr='#d10cc0',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */

          h2 {
            font-size: $title-size;
            color: #fff;
            background-color: #000;
            line-height: 0.9em;
            padding: 30px 30px;
            transform: translate(-40%);
            width: 120%;
          }
        }
      }

      div.row-text {
        display: flex;
        flex-direction: row;

        div.first-half {
          flex: 3;
          padding: 90px 0;
          font-size: $medium-title;
          font-weight: bold;

          p {
            padding: 0 0 10px 0;

            span {
              position: relative;

              &::after {
                content: "";
                background-color: #ef0edc;
                position: absolute;
                line-height: 0;
                right: -0.2em;
                bottom: -0.2em;
                left: -0.1em;
                z-index: -1;
                padding: 10px 5px;
                transition: 0.3s;
              }
            }
          }
        }

        div.second-half {
          flex: 1;
        }
      }
    }

    div.banner {
      background-image: url("/vision/intro/banner.jpg");
      background-size: cover;
      background-position-y: center;
      height: 300px;
      width: 100%;
    }

    @media only screen and (max-width: $mobile-width) {
      .section-container {
        div.row-title {
          flex-direction: column !important;

          div.first-half {
            flex: 0 !important;
          }

          div.second-half {
            flex: 1 !important;
            width: 100% !important;
            padding: 0 0 40px 0 !important;

            h2 {
              transform: translate(-5%) !important;
              width: 100% !important;
            }
          }
        }

        div.row-text {
          flex-direction: column !important;
        }
      }
    }
  }
</style>
