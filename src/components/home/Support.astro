  <style lang="scss">
    @import "../../styles/variables.scss";
  
    section {
        display: flex;
        justify-content: center;
        padding: $blank-space;
        gap: $blank-space;

        h3 {
            font-size: $sub-title * 1.5;
            position: relative;
            max-width: fit-content;
            z-index: 1;
            color: #fff;

            &:after {
                content: "";

                width: 100%;
                height: $title-size / 10;
                padding-right: $title-size / 10;
                left: 0px;

                position: absolute;
                background: #e7d42b;
                bottom: calc($blank-space - ($title-size / 100));
                z-index: -1;
            }
        }

        p {
            color: #fff;
            font-size: $large-text * 1.25;
        }

        img {
            max-height: 20px;
        }

        .background {
            background-image: url("/2025/photos/scene_3.jpg");
            background-size: cover;
            background-position: center center;
            position: relative;
            opacity: 0.7;

            width: 50%;
            min-width: 50%;
            aspect-ratio: 1987 / 1325;

            &::before {
                content: "";
                position: absolute;
                left: -1px;
                bottom: 0px;
                width: 20%;
                aspect-ratio: 1 / 1;
                background-size: contain;
                background-repeat: no-repeat;
                background-image: url("/2025/icons/support.png");
                z-index: 100;
                transform: rotate(15deg);
            }
        }
    }
  </style>
  