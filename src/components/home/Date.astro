<style lang="scss">
  @import "../../styles/variables";
  @import "../../styles/button-bar";

  section {
    .section-container {
      height: 330px;
      padding: 0 0 0 $blank-space;

      display: flex;
      flex-direction: row;

      div.left {
        text-align: right;
        padding: 0 $sub-padding 0 0;
        position: relative;

        flex: 2;
        display: flex;
        justify-content: flex-end;
        align-items: center;
        flex-direction: column;

        font-weight: bold;

        background: #2c6425; /* Old browsers */
        background: linear-gradient(45deg, #8df553 0%, #2c6425 100%);

        &::before {
          content: "";
          flex: 1;
        }
        &::after {
          content: "";
          flex: 1;
        }

        p.first {
          color: #fff;

          text-shadow: 0 0 2px #b5ad00, 0 0 18px #eae9d3;

          font-size: $title-size;
          line-height: 0.9em;
          padding: 0 0 19px 0;
        }

        p.second {
          color: #fff;
          font-size: $medium-title;
          line-height: 0.9em;
        }

        a.global-link {
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          transition: all 0.5s;
          z-index: 2;
        }

        .mask {
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          left: 0;
          transition: all 0.5s;
          z-index: 1;
        }

        &:hover {
          & .mask {
            background-color: rgba($color: rgb(255, 255, 255), $alpha: 0.2);
          }
        }
      }

      div.right {
        background-image: url("/home/vision/background.jpg");
        background-size: cover;
        background-position: center left;

        flex: 1;
      }
    }
    @media only screen and (max-width: $mobile-width) {
      .section-container {
        padding: 0 !important;

        div.poster,
        div.title {
          flex: 1 !important;
        }
      }
    }
  }
</style>
