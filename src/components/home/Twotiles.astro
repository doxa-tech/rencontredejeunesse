  $sub-title: $large-text * 2;

  section {
    display: flex;
    flex-direction: column-reverse;
    color: #fff;
    padding-top: $blank-space;
    padding-bottom: $blank-space;

    p {
      font-size: $large-text * 1.25;
    }

