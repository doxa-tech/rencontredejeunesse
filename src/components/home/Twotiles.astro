      h3 {
        font-size: $sub-title * 1.5;
        position: relative;

        &::after {
          content: "";
          position: absolute;
          bottom: 0px;
          left: calc($sub-title / 8);
          width: calc(100% + $sub-title / 4);
          height: calc($sub-title / 4);
          background: #4f2c92;
          z-index: -1;
        }
      }
      p, h3 {
        margin-left: $blank-space;
      }

      .background {
        position: absolute;
        top: 0px;
        z-index: -10;

        width: 50%;
        height: 100%;
        background-image: url("/2025/photos/hands_1.jpg");
        background-size: cover;
        background-position: center center;
        box-shadow: inset -220px 0 250px -70px rgba(0,0,0,1);

        &::after {
          content: "";
          position: absolute;
          right: -1px;
          width: 25%;
          height: 100%;
          background: rgb(0,0,0);
          background: linear-gradient(270deg, rgba(0,0,0,1) 22%, rgba(0,212,255,0) 100%);
