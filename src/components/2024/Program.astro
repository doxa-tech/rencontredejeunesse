<style lang="scss">
  @import "../../styles/variables";

  section {
    color: #507d82;
    font-family: lato, sans-serif;
    letter-spacing: 0.1em;
    display: flex;
    justify-content: center;

    .section-container {
      max-width: $main-width;
      padding: 80px 50px;
      overflow: auto;

      .days {
        display: flex;
        gap: 30px;
      }

      .day {
        display: flex;
        flex-direction: column;
        gap: 25px;

        h4 {
          text-transform: uppercase;
          font-weight: bold;
        } 

        .timetable {
          display: flex;
          flex-direction: column;
          gap: 20px;

          .line {
            display: flex;
            gap: 5px;
            width: 300px;

            span {
              font-weight: bold;
            }

            div {
              display: flex;
              flex-direction: column;
              gap: 0px;

              p {
                display: flex;
                gap: 5px;

                &::before {
                  content: "|";
                  font-weight: bold;
                }
              }
            }
          }
        }
      }
    }
  }

  @media only screen and (max-width: $main-width) {

    section {

      .section-container {
        padding: 30px 0 50px 0;

        .days {
          flex-direction: column;

          .day {

            h4 {
              margin: 20px 0 0 0;
            }
          }
        }
      }
    }
  }
</style>
