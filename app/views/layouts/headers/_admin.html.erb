<header>
  <%= link_to image_tag("layout/logo.png", class: "logo"), connect_root_path %>

  <div class="user">
    <div><%= current_user.try(:full_name) || "Invité" %></div>
    <div class="edit">
      <%= link_to connect_edit_path do %>
        <%= image_tag("icons/gear.png") %>
        <span>Mon compte</span>
      <% end %>
    </div>
  </div>
  <div class="signout"><%= link_to "Déconnexion", signout_path, method: :delete %></div>

  <ul>
    <li class="text">Admininistration</li>
    <% if can?(:read, "admin/users") %><li><%= link_to "Utilisateurs", admin_users_path %></li><% end %>
    <li class="text">Commandes</li>
    <% if can?(:read, "admin/orders/checkin") %><li><%= link_to "Checkin", admin_orders_checkin_index_path %></li><% end %>
    <% if can?(:read, "admin/orders/events") %><li><%= link_to "Commandes", admin_orders_events_path %></li><% end %>
    <% if can?(:read, "admin/orders/registrants") %><li><%= link_to "Participants", admin_orders_registrants_path %></li><% end %>
    <% if can?(:read, "admin/discounts") %><li><%= link_to "Codes promotionels", admin_discounts_path %></li><% end %>
    <% if can?(:read, "admin/items") %><li><%= link_to "Produits", admin_items_path %></li><% end %>
    <li class="text">Commandes spéciales</li>
    <% if can?(:read, "admin/option_orders") %><li><%= link_to "Commandes spéciales", admin_option_orders_path %></li><% end %>
    <li class="text">Bénévoles</li>
    <% if can?(:read, "admin/volunteers") %><li><%= link_to "Bénévoles", admin_volunteers_path %></li><% end %>
    <% if can?(:read, "admin/volunteers") %><li><%= link_to "Badges", admin_badges_path %></li><% end %>
  </ul>
</header>
