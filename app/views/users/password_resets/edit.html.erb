<% content_for :id, "users-password-resets-edit"%>

<div class="content-wrap">

  <h2>Réinitialiser son mot de passe</h2>

  <div class="standard-form-row">
    <%= form_for @user, url: users_password_reset_path(params[:id]) do |f| %>

      <%= render 'error_messages', object: f.object %>

      <div class="row">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Nouveau mot de passe" %>
      </div>
      <div class="row">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </div>
      <div class="row">
        <span></span>
        <%= f.submit "Mettre à jour", class: "main-button" %>
      </div>

    <% end %>
  </div>
</div>
