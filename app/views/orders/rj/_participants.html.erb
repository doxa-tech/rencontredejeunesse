<div class="fields-for participants wrap standard-form-row">
  <%= product_f.fields_for :participants, (participants.build_from_user(current_user) unless participants.any?) do |f| %>
    <%= content_tag :div, class: "participants-fields wrap", style: hidden_if_destroyed(f.object) do %>

      <div class="participants-wrap">
        <div class="row">
          <%= f.label :gender %>
          <div class="select"><%= f.select :gender, options_for_enum(f.object, :gender) %></div>
        </div>

        <div class="row">
          <%= f.label :firstname %>
          <%= f.field_with_errors :text, :firstname, autocomplete: "off" %>
        </div>

        <div class="row">
          <%= f.label :lastname %>
          <%= f.field_with_errors :text, :lastname, autocomplete: "off" %>
        </div>

        <div class="row">
          <%= f.label :birthday %>
          <div class="select"><%= f.date_select :birthday, start_year: 1920, end_year: 2006 %></div>
        </div>

        <div class="row">
          <%= f.label :lodging %>
          <div><%= f.check_box :lodging, class: "lodging-checkbox" %></div>
        </div>
      </div>

      <%= f.hidden_field :_destroy, identifier: "destroy" %>
      <div class="row">
        <span></span>
        <button type="button" class="remove-fields sub-button" data-type="participants">Supprimer l'entrée</button>
      </div>
    <% end %>

  <% end %>

  <div class="row">
    <span></span>
    <button type="button" class="add-fields sub-button" data-type="participants" data-count="<%= participants.size %>">
      Ajouter une entrée
    </button>
  </div>
</div>
