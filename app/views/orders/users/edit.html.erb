<% content_for :id, "orders-users-edit" %>

<div class="content-wrap">
  <div class="standard-form-row">

    <%= form_for @user, url: orders_user_update_path(id: params[:id]) do |f| %>

      <%= render "error_messages", object: f.object %>

        <%= render "users/fields/information", f: f %>

        <div class="row">
          <span></span>
          <%= f.submit nil, class: "button main-button" %>
        </div>
      
    <% end %>
    
  </div>
</div>

<%= render "layouts/headers/application" %>