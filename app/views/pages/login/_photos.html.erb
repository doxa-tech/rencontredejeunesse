<section id="photos">

  <div class="section-container">

    <div class="images">
      <% @images_i.each.with_index do |j, index| %>
        <figure>
          <picture>
            <source type="image/webp" srcset="<%= image_url "login/photos/small/#{j}.jpg.webp" %>">
            <%= image_tag "login/photos/small/#{j}.jpg", class: "slideshow small image", data: { index: index } %>
          </picture>
        </figure>
      <% end %>
    </div>

    <div id="myModal" class="modal">
      <span class="slideshow close cursor">&times;</span>
      <div class="modal-content">
        <% @images_i.each.with_index do |j, index| %>
          <div class="mySlides">
            <div class="numbertext"><%= "#{index+1} / #{@images_i.size}" %></div>
            <picture>
              <source type="image/webp" srcset="<%= image_url "login/photos/#{j}.jpg.webp" %>">
              <%= image_tag "login/photos/#{j}.jpg", class: "slideshow big image", data: { index: index } %>
            </picture>
          </div>
        <% end %>
        
        <a class="slideshow prev">&#10094;</a>
        <a class="slideshow next">&#10095;</a>

        <div class="caption-container">
          <p id="caption"></p>
        </div>
      </div>
    </div>

  </div>

</section>

<%= javascript_include_tag "standalone/lightbox.js" %>